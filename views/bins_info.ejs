<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bin Status</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Body background */
        
        body {
            background: linear-gradient(to right, #4e54c8, #8f94fb);
            font-family: 'Arial', sans-serif;
            color: #333;
            margin: 0;
            height: 100vh;
            display: flex;
            flex-direction: column;
        }
        /* Navbar for menu button */
        
        .navbar {
            background-color: #333;
            padding: 10px 20px;
        }
        
        .navbar-brand {
            color: white;
            font-size: 1.5rem;
        }
        
        .navbar-toggler {
            border: none;
            color: white;
        }
        
        .navbar-toggler-icon {
            background-color: white;
        }
        /* Sidebar */
        
        .sidebar {
            position: fixed;
            top: 0;
            left: -250px;
            width: 250px;
            height: 100%;
            background-color: #333;
            color: white;
            padding: 20px;
            transition: all 0.3s ease;
            z-index: 1000;
        }
        
        .sidebar.active {
            left: 0;
        }
        
        .sidebar a {
            color: white;
            text-decoration: none;
            display: block;
            padding: 10px;
            font-size: 1.2rem;
        }
        
        .sidebar a:hover {
            background-color: #6a11cb;
        }
        /* Main content area */
        
        .content {
            margin-left: 0;
            padding: 30px;
            flex-grow: 1;
        }
        
        h2 {
            color: #333;
            margin-bottom: 30px;
        }
        /* Card Styling */
        
        .card {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s ease-in-out;
        }
        
        .card:hover {
            transform: translateY(-10px);
        }
        
        .card-header {
            background-color: #6a11cb;
            color: white;
            font-weight: bold;
            font-size: 1.2rem;
        }
        
        .card-body {
            background-color: #f9f9f9;
            padding: 20px;
            text-align: center;
        }
        
        .btn-location {
            background-color: #2575fc;
            color: white;
            font-size: 1rem;
            padding: 8px 20px;
            border-radius: 5px;
            transition: all 0.3s ease-in-out;
        }
        
        .btn-location:hover {
            background-color: #6a11cb;
        }
        /* Footer Styling */
        
        .footer {
            background-color: #333;
            color: white;
            padding: 20px;
            text-align: center;
            position: relative;
            bottom: 0;
            width: 100%;
        }
        
        .footer a {
            color: #fff;
            margin: 0 10px;
            text-decoration: none;
        }
        
        .footer a:hover {
            text-decoration: underline;
        }
        /* Responsive Layout */
        
        @media (max-width: 768px) {
            .sidebar {
                position: absolute;
                top: 0;
                left: -250px;
                width: 100%;
                transition: 0.3s;
            }
            .sidebar.active {
                left: 0;
            }
            .content {
                margin-left: 0;
            }
            .card {
                margin-bottom: 20px;
            }
            .btn-location {
                font-size: 0.9rem;
                padding: 6px 15px;
            }
        }
    </style>
</head>

<body>

    <!-- Navbar with Hamburger Menu -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <button class="navbar-toggler" type="button" id="menuToggle">
            <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand" href="#">Smart Dustbin Management</a>
    </nav>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <h3>Dashboard</h3>
        <a href="/divisions">Divisions</a>
        <a href="/bin-status">Bin Status</a>
        <a href="/logout">Logout</a>
    </div>

    <!-- Main content area -->
    <div class="content">
        <h2 class="text-center">Bin Status for Selected Division</h2>

        <!-- Bin Cards (Grid Layout) -->
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <% bins.forEach(bin => { %>
                <div class="col">
                    <div class="card">
                        <div class="card-header">
                            Bin ID:
                            <%= bin.bin_id %>
                        </div>
                        <div class="card-body">
                            <p>Status:
                                <%= bin.bin_status %>
                            </p>
                            <a href="/bin-location/<%= bin.bin_id %>" class="btn btn-location">View Location</a>
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>

        <!-- Back Button to go to divisions page -->
        <div class="text-center mt-4">
            <a href="/divisions" class="btn btn-primary">Back to Divisions</a>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <p>&copy; 2024 Smart Dustbin Management | <a href="#">Privacy Policy</a> | <a href="#">Terms of Service</a></p>
    </footer>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Toggle Sidebar Script -->
    <script>
        const menuToggle = document.getElementById('menuToggle');
        const sidebar = document.getElementById('sidebar');

        menuToggle.addEventListener('click', () => {
            sidebar.classList.toggle('active');
        });
    </script>
</body>

</html>